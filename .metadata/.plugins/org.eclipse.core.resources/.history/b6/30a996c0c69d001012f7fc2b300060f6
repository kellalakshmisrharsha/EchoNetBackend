package com.app;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class FriendService {
	@Autowired
	private FriendRepo fr;
	
	public List<User> getFriendsOfUser(User user){
		List<Friend> fl=fr.findByUser(user);
		return fl.stream().map(a->a.getFriend()).toList();
		
	}
	public void addFriends(User u1,User u2) {
		Friend f1=new Friend();
		Friend f2=new Friend();
		
		f1.setUser(u1);
		f1.setFriend(u2);
		f2.setUser(u2);
		f2.setFriend(u1);
		fr.save(f1);
		fr.save(f2);
	}
}
